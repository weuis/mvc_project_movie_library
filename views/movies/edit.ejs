<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/edit-movie.css">

<main class="edit-movie-page">
    <h1 class="form-title">✏ Edytuj film</h1>

    <form method="POST" action="/edit/<%= movie.id %>" class="movie-form">
        <div class="form-field">
            <label for="title">Tytuł:</label>
            <input type="text" id="title" name="title" value="<%= movie.title %>" required />
        </div>

        <div class="form-field">
            <label for="director">Reżyser:</label>
            <input type="text" id="director" name="director" value="<%= movie.director %>" required />
        </div>

        <div class="form-field">
            <label for="rating">Ocena:</label>
            <input type="number" id="rating" name="rating" min="1" max="10" value="<%= movie.rating %>" required />
        </div>

        <div class="form-field">
            <label for="genre">Gatunek:</label>
            <select id="genre" name="genre" required>
                <option value="Akcja" <%= movie.genre === 'Akcja' ? 'selected' : '' %>>Akcja</option>
                <option value="Komedia" <%= movie.genre === 'Komedia' ? 'selected' : '' %>>Komedia</option>
                <option value="Horror" <%= movie.genre === 'Horror' ? 'selected' : '' %>>Horror</option>
                <option value="Dramat" <%= movie.genre === 'Dramat' ? 'selected' : '' %>>Dramat</option>
                <option value="Sci-Fi" <%= movie.genre === 'Sci-Fi' ? 'selected' : '' %>>Sci-Fi</option>
            </select>
        </div>

        <div class="form-field">
            <label for="status">Status:</label>
            <select id="status" name="status">
                <option value="do obejrzenia" <%= movie.status === 'do obejrzenia' ? 'selected' : '' %>>Do obejrzenia</option>
                <option value="obejrzany" <%= movie.status === 'obejrzany' ? 'selected' : '' %>>Obejrzany</option>
            </select>
        </div>

        <div class="form-field">
            <label for="review">Recenzja:</label>
            <textarea id="review" name="review" rows="4"><%= movie.review %></textarea>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-submit">Zapisz zmiany</button>
            <a href="/" class="btn btn-back">← Powrót</a>
        </div>
    </form>
</main>
