<%- include('../partials/header') %>

<h2>Edytuj film</h2>
<form method="POST" action="/edit/<%= id %>">
    <label>
        <input type="text" name="title" value="<%= movie.title %>" required />
    </label>
    <label>
        <input type="text" name="director" value="<%= movie.director %>" required />
    </label>
    <label>
        <input type="number" name="rating" min="1" max="10" value="<%= movie.rating %>" required />
    </label>

    <label>
        <select name="status">
            <option value="W trakcie" <%= movie.status === 'W trakcie' ? 'selected' : '' %>>W trakcie</option>
            <option value="Obejrzany" <%= movie.status === 'Obejrzany' ? 'selected' : '' %>>Obejrzany</option>
        </select>
    </label>

    <label>
        <textarea name="review"><%= movie.review %></textarea>
    </label>

    <button type="submit">Zapisz zmiany</button>
</form>

<a href="/">← Powrót</a>

<%- include('../partials/footer') %>
