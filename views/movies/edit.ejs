<%- include('../partials/header') %>

<main>
    <h2>‚úèÔ∏è Edytuj film</h2>
    <form method="POST" action="/edit/<%= movie.id %>" class="form">
        <label>
            <input type="text" name="title" value="<%= movie.title %>" required />
        </label>
        <label>
            <input type="text" name="director" value="<%= movie.director %>" required />
        </label>
        <label>
            <input type="number" name="rating" min="1" max="10" value="<%= movie.rating %>" required />
        </label>

        <label>
            <select name="genre" required>
                <option value="Akcja">Akcja</option>
                <option value="Komedia">Komedia</option>
                <option value="Horror">Horror</option>
                <option value="Dramat">Dramat</option>
                <option value="Sci-Fi">Sci-Fi</option>
            </select>
        </label>

        <label>
            <select name="status">
                <option value="W trakcie" <%= movie.status === 'W trakcie' ? 'selected' : '' %>>‚è≥ W trakcie</option>
                <option value="Obejrzany" <%= movie.status === 'Obejrzany' ? 'selected' : '' %>>‚úÖ Obejrzany</option>
            </select>
        </label>

        <label>
            <textarea name="review"><%= movie.review %></textarea>
        </label>

        <button type="submit">üíæ Zapisz zmiany</button>
    </form>

    <a href="/">‚Üê Powr√≥t</a>
</main>

