<%- include('../partials/header') %>

<h1>Moja kolekcja filmów</h1>
<a href="/add">Dodaj nowy film</a>

<ul>
    <% if (movies.length === 0) { %>
        <li>Brak filmów w kolekcji.</li>
    <% } else { %>
        <% movies.forEach((movie, index) => { %>
            <li>
                <strong><%= movie.title %></strong> – <%= movie.director %>, Ocena: <%= movie.rating %>,
                Status: <%= movie.status %> —
                <a href="/details/<%= index %>">Szczegóły</a>
            </li>
        <% }) %>
    <% } %>
</ul>

<%- include('../partials/footer') %>
