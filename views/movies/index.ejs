<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>Katalog film√≥w</title>
    <link rel="stylesheet" href="/css/styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<header>
    <nav class="navbar">
        <h1 class="logo">üé¨ Moja kolekcja film√≥w</h1>
        <div class="nav-links">
            <a href="/add" class="btn">‚ûï Dodaj nowy film</a>
            <a href="/top_movies" class="btn">üìà Top Filmy</a>
        </div>
    </nav>
</header>

<main class="container">
    <section class="movie-section">
        <ul class="movie-list">
            <% if (movies.length === 0) { %>
                <li class="empty">Brak film√≥w w kolekcji.</li>
            <% } else { %>
                <% movies.forEach((movie) => { %>
                    <li class="movie-card">
                        <div class="movie-info">
                            <h2><%= movie.title %></h2>
                            <p>üé¨ Re≈ºyser: <%= movie.director %></p>
                            <p>‚≠ê Ocena: <%= movie.rating %>/10</p>
                            <p>üïí Status: <span class="status <%= movie.status === 'obejrzany' ? 'done' : 'do' %>"><%= movie.status %></span></p>
                        </div>
                        <div class="movie-actions">
                            <a href="/details/<%= movie.id %>" class="details-link">üìÑ Szczeg√≥≈Çy</a>
                        </div>
                    </li>
                <% }) %>
            <% } %>
        </ul>
    </section>

    <section class="sort-section">
        <form method="GET" action="/">
            <label for="sort">Sortuj wed≈Çug:</label>
            <select name="sort" id="sort" onchange="this.form.submit()">
                <option value="">Brak</option>
                <option value="title">Tytu≈Ç</option>
                <option value="rating">Ocena</option>
                <option value="status">Status</option>
            </select>
        </form>
    </section>

    <% if (success_msg) { %>
        <div class="flash-success"><%= success_msg %></div>
    <% } %>
    <% if (error_msg) { %>
        <div class="flash-error"><%= error_msg %></div>
    <% } %>
</main>

<footer class="footer">
    <p>&copy; <%= new Date().getFullYear() %> Moja Kolekcja Film√≥w üé¨</p>
</footer>
</body>
</html>
