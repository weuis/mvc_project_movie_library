<link rel="stylesheet" href="/css/movie-details.css">

<main class="movie-details">
    <h2 class="movie-title"><%= movie.title %></h2>

    <ul class="movie-info">
        <li><span>🎞️ Reżyser:</span> <%= movie.director %></li>
        <li><span>⭐ Ocena:</span> <%= movie.rating %></li>
        <li><span>📌 Status:</span> <%= movie.status %></li>
        <li><span>📝 Recenzja:</span> <%= movie.review || 'Brak recenzji.' %></li>
        <li><span>🎬 Gatunek:</span> <%= movie.genre %></li>
    </ul>

    <div class="actions">
        <a href="/edit/<%= movie.id %>" class="btn btn-edit"> Edytuj</a>

        <form method="POST" action="/delete/<%= movie.id %>" onsubmit="return confirm('Na pewno chcesz usunąć film?')" class="inline-form">
            <button type="submit" class="btn btn-delete">Usuń</button>
        </form>
    </div>

    <div class="form-actions">
        <a href="/" class="btn btn-secondary">← Powrót do listy</a>
    </div>

</main>

