<%- include('../partials/header') %>

<main class="movie-details">
    <h2><%= movie.title %></h2>

    <ul class="movie-info">
        <li><strong>🎞️ Reżyser:</strong> <%= movie.director %></li>
        <li><strong>⭐ Ocena:</strong> <%= movie.rating %></li>
        <li><strong>📌 Status:</strong> <%= movie.status %></li>
        <li><strong>📝 Recenzja:</strong> <%= movie.review || 'Brak recenzji.' %></li>
        <li><strong>🎬 Gatunek:</strong> <%= movie.genre %></li>
    </ul>

    <div class="actions">
        <a href="/edit/<%= movie.id %>" class="btn edit">✏️ Edytuj</a>

        <form method="POST" action="/delete/<%= movie.id %>" onsubmit="return confirm('Na pewno chcesz usunąć film?')" class="inline-form">
            <button type="submit" class="btn delete">🗑️ Usuń</button>
        </form>
    </div>

    <a href="/" class="btn back">← Powrót do listy</a>
</main>

<%- include('../partials/footer') %>
